<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite thread-count="5" name="Suite" parallel="tests">
<groups>
<run>
<include name="sanity"/>
<!--<include name="regression"/>-->
<!--<include name="datadriven"/>-->
</run>
</groups>
<listeners>
<listener class-name="utilities.ExtentReportManager"/>
</listeners>
  
  
   <test name="chrome">
  <parameter name="os" value="windows"/>
  <parameter name="browser" value="chrome"/>
  <classes>
      <class name="testCases.TC6_AddToWishList"/>
      <class name="testCases.TC01_LaunchApplication"/>
      <class name="testCases.TC4_AddAffiliate"/>
      <class name="testCases.TC3_AddToCart"/>
      <class name="testCases.TC2_Login"/>
      <class name="testCases.TC5_CompletePurchase"/>
    </classes>
   </test>  
  
   <test name="edge">
  
   <parameter name="os" value="windows"/>
  <parameter name="browser" value="edge"/>
  <classes>
      <class name="testCases.TC6_AddToWishList"/>
      <class name="testCases.TC01_LaunchApplication"/>
      <class name="testCases.TC4_AddAffiliate"/>
      <class name="testCases.TC3_AddToCart"/>
      <class name="testCases.TC2_Login"/>
      <class name="testCases.TC5_CompletePurchase"/>
    </classes>
     </test>  
  
   <test name="firefoxTest">
     <parameter name="os" value="windows"/>
  <parameter name="browser" value="firefox"/>
  <classes>
      <class name="testCases.TC6_AddToWishList"/>
      <class name="testCases.TC01_LaunchApplication"/>
      <class name="testCases.TC4_AddAffiliate"/>
      <class name="testCases.TC3_AddToCart"/>
      <class name="testCases.TC2_Login"/>
      <class name="testCases.TC5_CompletePurchase"/>
    </classes>
  
  </test> <!-- Test -->
</suite> <!-- Suite -->
